<div class="card mt-3">
  <div class="card-header">
    <h4 class="mb-0"><%= t "devise.invitations.new.header" %></h4>
  </div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post }) do |f| %>
      <%= render 'shared/errors', resource: resource %>

      <% resource.class.invite_key_fields.each do |field| -%>
        <div class="field">
          <%= f.label field, class: 'form-label' %>
          <%= f.text_field field, class: 'form-control form-control-sm' %>
        </div>
      <% end -%>

      <div class="actions mt-3">
        <%= f.submit t("devise.invitations.new.submit_button"), class: 'btn btn-sm btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
